    <link rel="stylesheet" href="/public/styles/styles.css" type="text/css">
    <title>Новости</title>
</head>
<body>
    <%- include(partials.header) %>
    <section class="section">
        <div class="container">
            <div class="content">
                <div class="content-text">
                    <h1 class="content-heading">
                        <span class="content-heading_top news-heading">
                            Новости
                        </span>
                    </h1>
                </div>
            </div>
        </div>
    </section>
    <section class="breadcrumbs">
        <div class="container">
            <ul class="breadcrumbs-list">
                <% for(var i=0; i < breadcrumbs.length; i++) {%>
                    <li class="breadcrumb">
                        <a href="<%- breadcrumbs[i].url %>" class=""><%= breadcrumbs[i].name %></a>
                    </li>
                <% } %>
            </ul>
        </div>
    </section>
