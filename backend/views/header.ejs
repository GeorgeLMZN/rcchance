<header class="header">
    <div class="container-fluid">
        <nav class="header-nav">
            <a href="/" class="header-nav_logo">
                <div class="header-nav_logo-image"></div>
                <div class="header-nav_logo-text">
                    <span class="header-nav_logo-text__top">Клиника Шанс</span>
                    <span class="header-nav_logo-text__bottom">Бесплатное анонимное консультирование</span>
                </div>
            </a>
            <div class="header-nav_action">
                <a class="header-nav_contact-link">
                    cвязаться с нами
                </a>
                <a href="tel:+7 846 990-19-21" class="contact-list_link header-link">
                    <div class="contact-list_icon__phone">
                        <img src="/public/images/phone.svg" alt="icon-phone">
                    </div>
                </a>
                <div class="header-nav_btn header-nav_btn__open">
                    <img src="/public/images/burger.svg" alt="">
                </div>
            </div>
            <ul class="header-nav_list hidden">
                <div class="header-nav_btn header-nav_btn__close">
                    <img src="/public/images/arrow_right.svg" alt="">
                </div>
                <% for(var i = 0; i < routes.routes.length; i++) {%>

                    <li class="header-nav_item">
                        <a href="<%- routes.routes[i].path %>" class="header-nav_link"><%= routes.routes[i].name %></a>
                        <% if (routes.sub_routes[routes.routes[i].id]){ %>
                            <div class="triangle">
                                
                            </div>
                        <% } %>
                    </li>
                    <% if (routes.sub_routes[routes.routes[i].id]){ %>
                        <div class="header-nav_item-sub d-none">
                            <% routes.sub_routes[routes.routes[i].id].forEach(function(link) { %>
                                <li class="header-nav_item">
                                    <a href="<%- '/' + link.parent_slug + link.path %>" class="header-nav_link"><%= link.name %></a>
                                </li>
                             <% }); %> 
                        </div>
                    <% } %>
                <% } %>
            </ul>
        </nav>
    </div>
</header>